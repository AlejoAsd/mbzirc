<?xml version="1.0"?>
<sdf version="1.9">
  <model name="mbzirc_naive_spinning_radar">
    <link name="base_link">
      <inertial>
        <mass>0.005</mass>
        <inertia>
          <ixx>8.33e-06</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>8.33e-06</iyy>
          <iyz>0</iyz>
          <izz>8.33e-06</izz>
        </inertia>
      </inertial>
    </link>
    <link name="sensor_link">
      <inertial>
        <mass>0.005</mass>
        <inertia>
          <ixx>8.33e-06</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>8.33e-06</iyy>
          <iyz>0</iyz>
          <izz>8.33e-06</izz>
        </inertia>
      </inertial>
      <sensor name="gpu_lidar" type="gpu_lidar">
        <!-- Make sure lidar can fill every angle step. For a 60RPM radar
        1 rotation per second for 250 steps, we split it up into 10 iterations,
        with 25 scans each. -->
        <update_rate>10</update_rate>
        <lidar>
          <scan>
            <horizontal>
              <samples>25</samples>
              <resolution>1</resolution>
              <min_angle>-0.314159</min_angle>
              <max_angle>0.314159</max_angle>
            </horizontal>
            <vertical>
              <samples>32</samples>
              <resolution>1</resolution>
              <min_angle>-0.698132</min_angle>
              <max_angle>0.0872665</max_angle>
            </vertical>
          </scan>
          <range>
            <min>1</min>
            <max>3000</max>
            <resolution>1.5</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0</mean>
            <stddev>1.5</stddev>
          </noise>
          <visibility_mask>55</visibility_mask>
        </lidar>
        <alwaysOn>true</alwaysOn>
        <visualize>true</visualize>
      </sensor>
    </link>
    <joint name="sensor_joint" type="revolute">
      <pose>0 0 0 0 0 0</pose>
      <parent>base_link</parent>
      <child>sensor_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    <!-- Joint Controller - velocity control -->
    <plugin
        filename="ignition-gazebo-joint-controller-system"
        name="ignition::gazebo::systems::JointController">
      <joint_name>sensor_joint</joint_name>
      <!-- velocity in rad/sec -->
      <initial_velocity>6.283185</initial_velocity>
    </plugin>
    <!-- Joint state publisher -->
    <plugin
        filename="libignition-gazebo-joint-state-publisher-system.so"
        name="ignition::gazebo::systems::JointStatePublisher">
      <joint_name>sensor_joint</joint_name>
    </plugin>
    <plugin
      filename="libMaritimeRadar.so"
      name="mbzirc::MaritimeRadar">
      <joint_name>sensor_joint</joint_name>
    </plugin>
    <frame name="mount_point"/>
  </model>
</sdf>
